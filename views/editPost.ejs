<!DOCTYPE html>
<html>

<head>
  <title>
    <%= dataSite.title %>
  </title>
  <%- include('includes/links'); -%>
  <%- include('includes/quillEditor'); -%>
</head>

<body>
  <%- include('includes/menus'); -%>
  <div class="container">
    <h1>
      <%= dataSite.title %>
    </h1>
    <form action="/cemese/posts/update" method="post" id="form-save">
      <div class="row">
        <div class="col-md-9 mb-2">
          <div>
            <div class="form-group">
              <label for="friendly_url">Titulo</label>
              <input value="<%= post.id %>" name="id" type="hidden" required />
              <input class="form-control" value="<%= post.title %>" name="title" placeholder="title" type="text"
                required />
              <small id="emailHelp" class="form-text text-muted">
                <%= post.friendly_url %></small>
            </div>

            <textarea name="text" class="d-none" id="target-editor"></textarea>
            <%- include('includes/quillToolbar') -%>
            <div id="editor">
              <%- post.text %>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <button class="btn btn-info btn-block btn-form" type="submit">Actualizar</button>
        </div>
      </div>
    </form>
  </div>
  <%- include('includes/quill') -%>
</body>

</html>